---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/blog/BlogPost.astro';

const allPosts = await Astro.glob('../pages/posts/*.md');

const pageTitle = "Mi blog de Astro aprendizaje"
---

<BaseLayout pageTitle={pageTitle}>
	
	<h2>... ¡y mi nuevo Blog!</h2>

	<p>Aquí es donde publicaré sobre mi viaje de aprendizaje Astro.</p>
	<ul>
		{allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title}></BlogPost>)}
	</ul>
</BaseLayout>
